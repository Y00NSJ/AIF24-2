{
    "manifest_version": 3,
    "name": "Translate Plugin",
    "version": "1.0",
    "permissions": ["activeTab", "contextMenus", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }